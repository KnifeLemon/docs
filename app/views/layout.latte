<!doctype html>
<html lang="{constant('LANGUAGE')}">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <base href="{str_replace('index.php', '', $_SERVER['SCRIPT_NAME'])}" />
        <meta name="description" content="Flight PHP is a fast, simple, and AI-friendly PHP framework for modern web development. Optimized for AI-powered coding assistants and developer workflows." />
        <script type="application/ld+json">
        {
          "@context": "https://schema.org",
          "@type": "SoftwareApplication",
          "name": "Flight PHP Framework",
          "description": "Fast, simple, and AI-ready PHP framework for modern developer experience.",
          "applicationCategory": "WebApplicationFramework",
          "featureList": "AI-powered developer experience, AI coding assistant integration, LLM setup commands"
        }
        </script>
        {include 'links.latte'}

        <title>
            {if isset($page_title)}{_$page_title} -{/if}
            {isset($custom_page_title) ? $custom_page_title.' - '}
            Flight PHP Framework
        </title>

        {include 'opengraph.latte'}
    </head>
    <body class="pb-5">
        <div id="container" class="container shadow pb-5">
            {include 'header.latte'}
            {include 'banner.latte'}

            <main class="p-4">{block content}{/block}</main>

            {include 'footer.latte'}
        </div>

        {include 'scripts.latte'}
    </body>
</html>
